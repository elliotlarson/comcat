<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="mb-4">Statements</h1>

  <div class="card mb-4">
    <div class="card-body">
      <%= render 'form', statement: @statement %>
    </div>
  </div>

  <% @statements.each do |statement| %>
    <div class="card mb-4">
      <div class="card-body">
        <h4 class="fw-normal">
          <%= statement.body %>
        </h4>
        <div class="nav">
          <li class="nav-item">
            <%= link_to edit_statement_path(statement), class: "nav-link pb-0 ps-0" do %>
              <div class="fa fa-pencil"></div>
              Edit
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to statement, class: "nav-link pb-0", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <div class="fa fa-trash"></div>
              Destroy
            <% end %>
          </li>
        </div>
      </div>
    </div>
  <% end %>
</div>
