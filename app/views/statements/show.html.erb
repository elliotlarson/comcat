<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="card">
    <div class="card-body">
      <h4 class="fw-normal">
        <%= @statement.body %>
      </h4>

      <div class="nav">
        <li class="nav-item">
          <%= link_to statements_path(@statement), class: "nav-link pb-0 ps-0" do %>
            <div class="fa fa-arrow-left"></div>
            back
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to edit_statement_path(@statement), class: "nav-link pb-0" do %>
            <div class="fa fa-pencil"></div>
            Edit
          <% end %>
        </li>
      </div>

    </div>
  </div>
</div>
